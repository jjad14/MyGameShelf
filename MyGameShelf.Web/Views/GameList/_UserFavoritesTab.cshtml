@using MyGameShelf.Web.ViewModels

@model UserFavoritesTabViewModel

@if (!Model.Favorites.Any())
{
    <p class="text-muted">No favorite games in this category.</p>
}
else
{
    <div class="row">
        @foreach (var game in Model.Favorites)
        {
            <div class="col-md-4 mb-3">
                <div class="card bg-primary rounded-4 h-100 text-white p-2">
                    <div class="position-relative">
                        <img src="@game.GameImageUrl" class="card-img-top profile-related-game-image" alt="@game.GameTitle">

                        @if (Model.IsOwner)
                        {
                            <!-- Icons overlay (matching Game Details style) -->
                            <div class="position-absolute top-0 end-0 m-2 d-flex flex-column align-items-end gap-2">

                                <button type="button" class="btn btn-link bg-white rounded-5 p-0" title="Remove"
                                        style="color: red; font-size: 1.5rem;">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </div>
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@game.GameTitle</h5>
                        <p>Metacritic: @game.Metacritic</p>
                        <p>EsrbRating: @game.EsrbRating</p>
                        <p>Added On: @game.CreatedAt.ToString("MMM dd, yyyy")</p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a href="@Url.Action("Details", "Games", new { id = game.GameId })" class="btn btn-sm btn-secondary w-100">
                            View Game
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination favorite-pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link user-favorites-page" href="#" data-page="@(Model.CurrentPage - 1)">Previous</a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link user-favorites-page" href="#" data-page="@i">@i</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link user-favorites-page" href="#" data-page="@(Model.CurrentPage + 1)">Next</a>
                </li>
            </ul>
        </nav>
    }

}

