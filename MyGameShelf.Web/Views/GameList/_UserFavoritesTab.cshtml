@using MyGameShelf.Web.ViewModels

@model UserFavoritesTabViewModel

@if (!Model.Favorites.Any())
{
    <p class="text-muted">No favorite games in this category.</p>
}
else
{
    <div class="row">
        @foreach (var game in Model.Favorites)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="position-relative">
                        <img src="@game.GameImageUrl" class="card-img-top" alt="@game.GameTitle">

                        @if (Model.IsOwner)
                        {
                            <!-- Icons overlay (matching Game Details style) -->
                            <div class="position-absolute top-0 end-0 m-2 d-flex flex-column align-items-end gap-2">

                                <button type="button" class="btn btn-link p-0" title="Remove"
                                        style="color: red; font-size: 1.5rem;">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </div>
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@game.GameTitle</h5>
                        <p>Metacritic: @game.Metacritic</p>
                        <p>EsrbRating: @game.EsrbRating</p>
                        <p>Added On: @game.CreatedAt.ToString("MMM dd, yyyy")</p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a href="@Url.Action("Details", "Games", new { id = game.GameId })" class="btn btn-sm btn-primary w-100">
                            View Game
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

}

