@using MyGameShelf.Application.DTOs
@model GameDto

@if (Model == null)
{
    @for (int i = 0; i < 6; i++)
    {
        <partial name="_GameCardSkeleton" />
    }
}
else
{
    <div class="col">
        <div class="card h-100" style="width: 18rem;">
            <div class="position-relative">
                <img src="@Model.BackgroundImage" class="card-img-top" alt="@Model.Name" style="height: 200px; object-fit: cover;">
                @if (Model.Metacritic > 0)
                {
                    <span class="badge position-absolute top-0 end-0 m-2 bg-warning text-dark
                        @(Model.Metacritic >= 75 ? "bg-success" : Model.Metacritic >= 50 ? "bg-warning text-dark" : "bg-danger")"
                        style="font-size: 0.85rem;">
                        <strong>@Model.Metacritic</strong>
                    </span>
                }
            </div>
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text text-truncate">@Model.Description</p>
                <a href="/Games/Details/@Model.Id" class="btn btn-primary mt-auto">View Details</a>
            </div>
            <div class="card-footer bg-transparent border-top-0">
                <button class="btn btn-link p-0" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDetails-@Model.Id" aria-expanded="false" aria-controls="collapseDetails-@Model.Id">
                    Show Details
                </button>
                <div class="collapse mt-2" id="collapseDetails-@Model.Id">
                    @if (Model.Platforms != null && Model.Platforms.Any())
                    {
                        <div class="mb-1">
                            <strong>Platforms:</strong>
                            @foreach (var platform in Model.Platforms)
                            {
                                <span class="badge bg-info text-dark me-1">@platform</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>




}
