@{
    ViewData["Title"] = "Error";
}

<div class="container d-flex justify-content-center mt-5 px-3">
    <div class="card w-100 shadow-lg" style="max-width: 900px;">
        <div class="card-body text-center p-5">
            <h2 class="card-title text-danger mb-4">Oops! Something went wrong</h2>
            <p class="card-text fs-5 mb-4">@ViewBag.ErrorMessage</p>
            <a class="btn btn-lg btn-primary" href="@ViewBag.RedirectUrl">@ViewBag.RedirectText</a>
        </div>
    </div>
</div>