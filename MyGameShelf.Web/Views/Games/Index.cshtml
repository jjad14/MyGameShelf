@using MyGameShelf.Application.DTOs
@model IEnumerable<GameDto>

<h2>Games List</h2>

<div class="container">
    <div class="row gap-2">
        @foreach(var game in Model)
        {
            <div class="col">
                <div class="card h-100" style="width: 18rem;">
                    <img src="@game.BackgroundImage" class="card-img-top" alt="@game.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@game.Name</h5>
                        <p class="card-text text-truncate">@game.Description</p>
                        <a href="/Games/Details/@game.Id" class="btn btn-primary mt-auto">View Details</a>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        @if (game.Genres != null)
                        {
                            @foreach (var genre in game.Genres)
                            {
                                <span class="badge bg-secondary me-1">@genre</span>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
