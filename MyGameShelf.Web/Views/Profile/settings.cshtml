@using MyGameShelf.Web.ViewModels
@model SettingsPageViewModel



<div class="container" style="max-width: 900px;">
    <div class="card bg-primary rounded-4 h-100 text-white p-2">
        <div class="card-header text-white d-flex align-items-center justify-content-between">
            <div>
                <h5>
                    <i class="fa-solid fa-gear"></i>&nbsp; User Settings
                </h5>
            </div>
            <a asp-controller="Profile" asp-action="Index" asp-route-username="@User.Identity.Name"
                class="btn btn-dark btn-sm py-2 rounded-3">
                <i class="fa-solid fa-arrow-left"></i>&nbsp; Back to Profile
            </a>
        </div>

        <div class="card-body">
            <ul class="nav nav-tabs border-bottom border-dark border-2" id="settingsTabs" role="tablist">
                <li class="nav-item rounded-top-3" role="presentation">
                    <button class="nav-link active text-white" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile"
                            type="button" role="tab" aria-controls="profile" aria-selected="true">
                        Edit Profile
                    </button>
                </li>
                <li class="nav-item rounded-top-3" role="presentation">
                    <button class="nav-link text-white" id="account-tab" data-bs-toggle="tab" data-bs-target="#account"
                            type="button" role="tab" aria-controls="account" aria-selected="false">
                        Account Settings
                    </button>
                </li>
            </ul>

            <div class="tab-content pt-4" id="settingsTabsContent">
                <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <form asp-controller="Profile" asp-action="update-profile" method="post" enctype="multipart/form-data">
                        <h4 class="mb-4 border-bottom pb-2">Profile Settings</h4>

                        @* Validation summary *@
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty]?.Errors.Count > 0)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                                {
                                    <p>@error.ErrorMessage</p>
                                }
                            </div>
                        }

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                        }

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Profile.FirstName" class="form-label"></label>
                                <input asp-for="Profile.FirstName" class="form-control" />
                                <span asp-validation-for="Profile.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Profile.LastName" class="form-label"></label>
                                <input asp-for="Profile.LastName" class="form-control" />
                                <span asp-validation-for="Profile.LastName" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Profile.ProfileMessage" class="form-label"></label>
                                <textarea asp-for="Profile.ProfileMessage" class="form-control rounded-3" rows="4"></textarea>
                                <span asp-validation-for="Profile.ProfileMessage" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label">Current Profile Picture</label><br />
                                @if (!string.IsNullOrEmpty(Model.Profile.ProfilePictureUrl))
                                {
                                    <img src="@Model.Profile.ProfilePictureUrl" alt="Profile Picture" class="img-thumbnail mb-2" style="max-width: 150px; max-height: 150px;" />
                                }
                                else
                                {
                                    <p>No profile picture uploaded.</p>
                                }

                                <label asp-for="Profile.NewProfilePicture" class="form-label mt-3">Upload New Profile Picture</label>
                                <input asp-for="Profile.NewProfilePicture" type="file" class="form-control" />
                                <span asp-validation-for="Profile.NewProfilePicture" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Profile.Gender" class="form-label"></label>
                                <select asp-for="Profile.Gender" class="form-select">
                                    <option value="">-- Select --</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                    <option>Prefer not to say</option>
                                </select>
                                <span asp-validation-for="Profile.Gender" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Profile.Birthday" class="form-label"></label>
                                <input asp-for="Profile.Birthday" type="date" class="form-control" />
                                <span asp-validation-for="Profile.Birthday" class="text-danger"></span>
                            </div>

                            <hr class="my-3" />

                            <div class="col-md-12">
                                <label asp-for="Profile.Street" class="form-label"></label>
                                <input asp-for="Profile.Street" class="form-control" />
                                <span asp-validation-for="Profile.Street" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Profile.City" class="form-label"></label>
                                <input asp-for="Profile.City" class="form-control" />
                                <span asp-validation-for="Profile.City" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Profile.Province" class="form-label"></label>
                                <input asp-for="Profile.Province" class="form-control" />
                                <span asp-validation-for="Profile.Province" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Profile.PostalCode" class="form-label"></label>
                                <input asp-for="Profile.PostalCode" class="form-control" />
                                <span asp-validation-for="Profile.PostalCode" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Profile.Country" class="form-label"></label>
                                <input asp-for="Profile.Country" class="form-control" />
                                <span asp-validation-for="Profile.Country" class="text-danger"></span>
                            </div>

                            <hr class="my-3" />

                            <div class="col-md-6">
                                <label asp-for="Profile.XSocialLink" class="form-label"></label>
                                <input asp-for="Profile.XSocialLink" class="form-control" />
                                <span asp-validation-for="Profile.XSocialLink" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Profile.InstagramSocialLink" class="form-label"></label>
                                <input asp-for="Profile.InstagramSocialLink" class="form-control" />
                                <span asp-validation-for="Profile.InstagramSocialLink" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Profile.FacebookSocialLink" class="form-label"></label>
                                <input asp-for="Profile.FacebookSocialLink" class="form-control" />
                                <span asp-validation-for="Profile.FacebookSocialLink" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Profile.YoutubeSocialLink" class="form-label"></label>
                                <input asp-for="Profile.YoutubeSocialLink" class="form-control" />
                                <span asp-validation-for="Profile.YoutubeSocialLink" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Profile.TwitchSocialLink" class="form-label"></label>
                                <input asp-for="Profile.TwitchSocialLink" class="form-control" />
                                <span asp-validation-for="Profile.TwitchSocialLink" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-secondary px-5 text-white">Save Changes</button>
                        </div>
                    </form>
                </div>

                <div class="tab-pane fade" id="account" role="tabpanel" aria-labelledby="account-tab">

                    @* Main form for password & profile visibility *@
                    <form asp-controller="Profile" asp-action="update-account" method="post" class="mx-auto" style="max-width: 800px;">
                        <h4 class="mb-4 border-bottom pb-2">Account Settings</h4>

                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty]?.Errors.Count > 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                                {
                                    <p>@error.ErrorMessage</p>
                                }
                            </div>
                        }

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                        }

                        @if (Model.SettingsCheck.HasPassword)
                        {
                            <div class="mb-4">
                                <h5>Password Reset</h5>
                                <div class="row g-3">

                                    <div class="col-md-6">
                                        <label asp-for="Account.CurrentPassword" class="form-label">Current Password</label>
                                        <input asp-for="Account.CurrentPassword" class="form-control" type="password" />
                                        <span asp-validation-for="Account.CurrentPassword" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6"></div>

                                    <div class="col-md-6">
                                        <label asp-for="Account.NewPassword" class="form-label">New Password</label>
                                        <input asp-for="Account.NewPassword" class="form-control" type="password" />
                                        <span asp-validation-for="Account.NewPassword" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Account.ConfirmNewPassword" class="form-label">Confirm New Password</label>
                                        <input asp-for="Account.ConfirmNewPassword" class="form-control" type="password" />
                                        <span asp-validation-for="Account.ConfirmNewPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <hr class="border-dark border-2"/>                            
                        }

                        <div class="mb-4">
                            <h5>Profile Visibility</h5>
                            <div class="form-check form-switch">
                                <input asp-for="Account.IsPublic" class="form-check-input" type="checkbox" role="switch" />
                                <label asp-for="Account.IsPublic" class="form-check-label">
                                    Make my profile public
                                </label>
                            </div>
                            <span asp-validation-for="Account.IsPublic" class="text-danger"></span>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-secondary text-white">Save Changes</button>
                        </div>
                    </form>

                    <hr class="border-dark border-2" />

                    @if (!Model.SettingsCheck.IsExternalLogin)
                    {
                        @* Separate form for Two-Factor Authentication *@
                        <form asp-controller="Profile" asp-action="toggle-two-factor" method="post" class="mx-auto" style="max-width: 800px;">
                            <h5 class="text-white">Two-Factor Authentication</h5>
    
                            @if (Model.SettingsCheck.TwoFactorEnabled)
                            {
                                <p class="text-white">2FA is currently <strong>enabled</strong>.</p>

                                <button type="submit" name="actionType" value="disable" class="btn btn-danger text-white">
                                    Disable 2FA
                                </button>
                            }
                            else
                            {
                                <p class="text-white">2FA is currently <strong>disabled</strong>.</p>
        
                                <a asp-controller="Profile" asp-action="Setup2FA" class="btn btn-success text-white">
                                    Enable 2FA
                                </a>
                            }
                        </form>

                        <hr class="border-dark border-2" />
                    }

                    @* Separate form for Delete Account *@
                    <form asp-controller="Profile" asp-action="delete-account" method="post" class="mx-auto" style="max-width: 800px;">
                        <h5 class="text-white">Delete Account</h5>
                        <p class="text-white">This action is irreversible. All your data will be permanently deleted.</p>
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete your account? This action cannot be undone.');">
                            Delete My Account
                        </button>
                    </form>

                </div>


            </div>
        </div>
    </div>
</div>