<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyGameShelf</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap-vapor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyGameShelf.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />

</head>
<body class="body-page">
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-primary navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">MyGameShelf</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Games" asp-action="Index">Games</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-white dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-user d-none d-md-inline"></i>&nbsp;
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end bg-primary" aria-labelledby="profileDropdown">
                                    <li class="nav-item pl-2">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Profile" asp-action="Index" asp-route-username="@User.Identity.Name">
                                            My Profile
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <form method="post" asp-controller="Auth" asp-action="Logout" class="d-inline">
                                            <button type="submit"
                                                    class="nav-link btn btn-link p-0 my-0 py-2 mx-2 shadow-none text-white"
                                                    style="cursor:pointer; border:none; background:none; text-transform:none; font-size:inherit; font-family:inherit; line-height:inherit; box-shadow:none !important;">
                                                Logout
                                            </button>
                                        </form>
                                    </li>

                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
                            </li>                            
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="d-flex flex-column min-vh-100">
        <div class="container flex-grow-1 mb-5">
            <main role="main" class="pb-3">
                <partial name="_Notification" />
                @RenderBody()
            </main>
        </div>


        <footer class="mt-auto py-4 text-white bg-dark text-center">
            <div class="container">
                <p>Powered By<a class="mx-2" href="https://rawg.io/">RAWG</i></a></p>
                <p><a class="mx-2" href="https://github.com/jjad14"><i class="fab fa-github"></i> </a></p>
                <p>&copy; 2025 - MyGameShelf - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
            </div>
        </footer>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/scripts.js" asp-append-version="true"></script>
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
